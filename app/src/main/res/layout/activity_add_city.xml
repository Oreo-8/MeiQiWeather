<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#494949"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddCityActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/addCity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/colorPrimary">

        <EditText
                android:id="@+id/addCity_eText"
                android:singleLine="true"
                android:hint="城市名"
                android:background="#00FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.v7.widget.Toolbar>

    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="#000000" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/add_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


</LinearLayout>